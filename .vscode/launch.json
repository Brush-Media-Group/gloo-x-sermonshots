{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/api/src/main.ts", // Path to your compiled main.js
      "console": "integratedTerminal",
      "restart": true, // Restarts the debugger when files change (useful with --watch)
      "envFile": "${workspaceFolder}/api/.env"
    }
  ]
}
